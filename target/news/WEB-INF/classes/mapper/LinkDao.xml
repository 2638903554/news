<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leehom.news.dao.LinkDao">

    <insert id="insertLink">
        INSERT INTO link (link_name, link_url) VALUES
            (#{linkName},#{linkUrl})
    </insert>

    <delete id="deleteLinkById">
        DELETE FROM link
        WHERE link_id = #{linkId}
    </delete>

    <select id="selectLinkById" resultType="Link">
        SELECT * FROM link WHERE link_id = #{linkId}
    </select>

    <select id="selectAll" resultType="Link">
        select * from link
    </select>

    <update id="updateLink">
        UPDATE
            link
        SET
            link_name = #{linkName},
            link_url = #{linkUrl}
        WHERE
          link_id = #{linkId}
    </update>

</mapper>