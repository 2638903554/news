<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leehom.news.dao.NavDao">

    <insert id="insertNav">
        INSERT INTO nav
        (nav_name,nav_remark)
        VALUES
        (#{navName},#{navRemark})
    </insert>

    <delete id="deleteNavById">
        DELETE FROM nav WHERE nav_id = #{navId}
    </delete>

    <select id="selectAll" resultType="Nav">
        SELECT
            *
#             nav_id,nav_name,nav_remark,
#             create_time,update_time
#             date_format(create_time,'%Y-%m-%d'),
#             date_format(update_time,'%Y-%m-%d')
        FROM nav
    </select>

    <select id="selectNavById" resultType="Nav">
        SELECT * FROM nav WHERE nav_id = #{navId}
    </select>

    <update id="updateNav">
        UPDATE nav
        set
            nav_name = #{navName},
            nav_remark = #{navRemark}
        WHERE nav_id = #{navId}
    </update>

</mapper>